<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>ShoppingCartViewerSession</servlet-name>
    <servlet-class>ShoppingCartViewerSession</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShoppingCartViewerSession</servlet-name>
    <url-pattern>/ShoppingCartViewerSession</url-pattern>
  </servlet-mapping>
    <servlet>
      <servlet-name>SessionTimer</servlet-name>
      <servlet-class>SessionTimer</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>SessionTimer</servlet-name>
      <url-pattern>/SessionTimer</url-pattern>
  </servlet-mapping>
   <session-config>
  	 <session-timeout>
   		60 <!-- minutes -->
	</session-timeout>
   </session-config>
</web-app>
